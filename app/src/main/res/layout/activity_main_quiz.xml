<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainQuiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grama"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgTime"
            android:layout_width="361dp"
            android:layout_height="141dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/default_option_border"
            android:src="@drawable/barca" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtPergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:hint="Qual time é esse?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnElimina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E3D34D"
                android:text="ELIMINA" />

            <Button
                android:id="@+id/btnDica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#E3D34D"
                android:text="DICA" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/opcao1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:onClick="onOptionSelect"
            android:padding="15dp"
            android:textSize="18sp"
            tools:text="Real Madrid" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/opcao2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:onClick="onOptionSelect"
            android:padding="15dp"
            android:textSize="18sp"
            tools:text="Santos FC" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/opcao3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:onClick="onOptionSelect"
            android:padding="15dp"
            android:textSize="18sp"
            tools:text="Manchester United" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/opcao4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:onClick="onOptionSelect"
            android:padding="15dp"
            android:textSize="18sp"
            tools:text="Dinamo Kiev" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/opcao5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border"
            android:gravity="center"
            android:onClick="onOptionSelect"
            android:padding="15dp"
            android:textSize="18sp"
            tools:text="Barcelona" />

        <LinearLayout
            android:layout_width="379dp"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDesista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#FD20A145"
                android:onClick="onSubmit"
                android:text="DESISTA"
                app:backgroundTint="@color/green" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAvancar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#FD20A145"
                android:gravity="center"
                android:onClick="onSubmit"
                android:text="Avançar"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>